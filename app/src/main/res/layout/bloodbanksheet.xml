<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view1"
        android:layout_width="50dp"
        android:background="@drawable/greypatch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_height="10dp"/>

    <LinearLayout
        android:id="@+id/bloodbank1"
        android:layout_width="match_parent"
        android:layout_below="@id/view1"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/blood" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Bharat Blood Bank"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/bloodbank1"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:background="#AFA8A8" />

    <LinearLayout
        android:id="@+id/bloodbank2"
        android:layout_below="@id/view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/blood" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Jeevan Rekha Blood Bank"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/bloodbank2"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:background="#AFA8A8" />

    <LinearLayout
        android:id="@+id/bloodbank3"
        android:layout_width="match_parent"
        android:layout_below="@id/view3"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/blood" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="National Blood Bank &amp; Research Centre"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/bloodbank3"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:background="#AFA8A8" />

    <LinearLayout
        android:id="@+id/bloodbank4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_below="@id/view4"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/blood" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Blood Bank, IGIMS"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/bloodbank4"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:background="#AFA8A8" />

    <LinearLayout
        android:id="@+id/bloodbank5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_below="@id/view5"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/blood" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Bihar State Blood Bank PMCH Campus"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="60dp"
        android:layout_below="@id/bloodbank5"
        android:layout_marginStart="60dp"
        android:background="#AFA8A8" />

    <LinearLayout
        android:id="@+id/bloodbank6"
        android:layout_width="match_parent"
        android:layout_below="@id/view6"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/blood" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Redcross Blood Bank"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>