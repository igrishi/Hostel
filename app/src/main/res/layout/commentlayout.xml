<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:padding="7dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/comment_user_image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/maleuser" />

        <TextView
            android:id="@+id/c_r_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/comment_user_image"
            android:fontFamily="@font/josefin_sans_bold"
            android:text="Username"
            android:textColor="#000000"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/c_r_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/c_r_username"
            android:layout_marginStart="12dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="12dp"
            android:layout_toEndOf="@id/comment_user_image"
            android:fontFamily="@font/josefin_sans_semibold"
            android:text="hyy!! nice pic you are good looking"
            android:textColor="#252525"
            android:textSize="17sp" />

        <View
            android:id="@+id/thin_line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/c_r_comment"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/comment_user_image"
            android:background="#AFA8A8" />
    </RelativeLayout>


</RelativeLayout>