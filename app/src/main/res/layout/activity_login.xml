<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnBoarding.Login">

    <TextView
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/alegreya_sans_medium_italic"
        android:text="@string/login"
        android:textColor="#D11D1D"
        android:textSize="26sp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/li_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_text"
        android:layout_centerHorizontal="true"
        android:hint="@string/email_id"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:drawableStart="@drawable/email"
        android:drawablePadding="9dp"
        />

    <EditText
        android:id="@+id/li_pass"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/li_email"
        android:layout_centerHorizontal="true"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:drawableStart="@drawable/password"
        android:drawablePadding="9dp"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/li_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Login"
        android:textColor="#D11D1D"
        android:background="#FFFFFF"/>
</RelativeLayout>